{
  "name": "rust-all-action",
  "version": "1.0.0",
  "description": "A GitHub Action to run multiple Rust workflows (build, test, clippy, fmt) with caching support.",
  "license": "UNLICENSE",
  "source": "./src/index.ts",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "dependencies": {
    "@actions/cache": "^4.0.5",
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.1",
    "@actions/http-client": "^2.2.3",
    "@actions/io": "^1.1.3",
    "@actions/tool-cache": "^2.0.2",
    "@types/spdx-expression-parse": "^3.0.5",
    "@vercel/ncc": "^0.38.3",
    "ncc": "^0.3.6",
    "spdx-expression-parse": "^4.0.0",
    "string-argv": "^0.3.2",
    "tslib": "^2.8.1",
    "typedconf": "^1.3.0"
  },
  "devDependencies": {
    "@types/node": "~24.3.0",
    "prettier": "~3.6.2",
    "rimraf": "~6.0.1",
    "tsutils": "~3.21.0",
    "tsx": "^4.20.5",
    "typescript": "~5.9.2"
  },
  "scripts": {
    "build": "pnpm run clean && ncc build src/main.ts",
    "build:watch": "ncc build src/main.ts --watch",
    "--------------": "",
    "test": "node --import tsx --test",
    "-------------- ": "",
    "prepublishOnly": "pnpm run test && pnpm run build",
    "clean": "rimraf dist",
    "fmt": "prettier --config .prettierrc --write ."
  },
  "packageManager": "pnpm@10.15.0",
  "release-it": {
    "github": {
      "release": true
    }
  }
}
